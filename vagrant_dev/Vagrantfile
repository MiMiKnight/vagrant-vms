# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  # box镜像
  config.vm.box = "MiMiKnight/ubuntu-22.04.4-server-amd64"
  # box版本
  config.vm.box_version = "1.0.0"
  # 公共Shell
  config.vm.provision "shell", path: "script/ubuntu22.04.4_jammy_source.sh"
  config.vm.provision "shell", path: "script/vm_public.sh"
  
  config.vm.define "mysql" do |host|
    # OnlyHost网卡
    host.vm.network "private_network", ip: "172.17.1.1",netmask: "16"
    # Disk
    host.vm.disk :disk, size: "65GB", name: "box-disk001", primary: true
    host.vm.disk :disk, size: "500GB", name: "box-disk002", primary: false
    # provider
    host.vm.provider "virtualbox" do |vb|
      # 虚拟机名称
      #vb.name = "xxx"
      # 图形化
      vb.gui = false
      # 内存
      vb.memory = "2048"
      # cpu
      vb.cpus = 2
    end
    # shell
    host.vm.provision "shell", path: "script/vm_mysql.sh"
    host.vm.provision "shell", path: "script/lvm_extend.sh"
    host.vm.provision "shell", path: "script/install_mysql_using_ded.sh"
  end
  
  config.vm.define "mariadb" do |host|
    # OnlyHost网卡
    host.vm.network "private_network", ip: "172.17.1.2",netmask: "16"
    # Disk
    host.vm.disk :disk, size: "65GB", name: "box-disk001", primary: true
    host.vm.disk :disk, size: "500GB", name: "box-disk002", primary: false
    # provider
    host.vm.provider "virtualbox" do |vb|
      # 虚拟机名称
      #vb.name = "xxx"
      # 图形化
      vb.gui = false
      # 内存
      vb.memory = "2048"
      # cpu
      vb.cpus = 2
    end
    # shell
    host.vm.provision "shell", path: "script/vm_mariadb.sh"
    host.vm.provision "shell", path: "script/lvm_extend.sh"
  end
  
  config.vm.define "redis" do |host|
    # OnlyHost网卡
    host.vm.network "private_network", ip: "172.17.1.3",netmask: "16"
    # Disk
    host.vm.disk :disk, size: "65GB", name: "box-disk001", primary: true
    # provider
    host.vm.provider "virtualbox" do |vb|
      # 虚拟机名称
      #vb.name = "xxx"
      # 图形化
      vb.gui = false
      # 内存
      vb.memory = "2048"
      # cpu
      vb.cpus = 2
    end
    # shell
    host.vm.provision "shell", path: "script/vm_redis.sh"
    host.vm.provision "shell", path: "script/install_redis.sh"
  end

  config.vm.define "nacos" do |host|
    # OnlyHost网卡
    host.vm.network "private_network", ip: "172.17.1.4",netmask: "16"
    # Disk
    host.vm.disk :disk, size: "65GB", name: "box-disk001", primary: true
    host.vm.disk :disk, size: "500GB", name: "box-disk002", primary: false
    # provider
    host.vm.provider "virtualbox" do |vb|
      # 虚拟机名称
      #vb.name = "xxx"
      # 图形化
      vb.gui = false
      # 内存
      vb.memory = "2048"
      # cpu
      vb.cpus = 2
    end
    # shell
    host.vm.provision "shell", path: "script/vm_nacos.sh"
    host.vm.provision "shell", path: "script/lvm_extend.sh"
  end
  
end
